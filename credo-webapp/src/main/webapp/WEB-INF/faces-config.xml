<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

  <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>home</from-outcome>
      <to-view-id>/index.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>credentials</from-outcome>
      <to-view-id>/credentials/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>requests</from-outcome>
      <to-view-id>/requests/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>groups</from-outcome>
      <to-view-id>/groups/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>reports</from-outcome>
      <to-view-id>/reports/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>about</from-outcome>
      <to-view-id>/about/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/credentials/index.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>import</from-outcome>
      <to-view-id>/credentials/import/index.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/credentials/*</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/credentials/index.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    <navigation-case>
      <from-outcome>cancel</from-outcome>
      <to-view-id>/credentials/index.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/requests/*</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/requests/index.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    <navigation-case>
      <from-outcome>cancel</from-outcome>
      <to-view-id>/requests/index.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/requests/create/*</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/requests/create/success.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>
    
  <navigation-rule>
    <from-view-id>/credentials/import/*</from-view-id>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/credentials/import/details.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/groups/*</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/groups/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
    <navigation-case>
      <from-outcome>cancel</from-outcome>
      <to-view-id>/groups/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/profiles/create/*</from-view-id>
    <navigation-case>
      <from-outcome>cancel</from-outcome>
      <to-view-id>/welcome/index.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/dashboard/index.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>
  
  <converter>
    <converter-for-class>
      java.util.Date
    </converter-for-class>
    <converter-class>
      org.soulwing.credo.converters.DefaultDateTimeConverter
    </converter-class>
  </converter>

  <converter>
    <converter-for-class>
      org.soulwing.credo.Password
    </converter-for-class>
    <converter-class>
      org.soulwing.credo.converters.PasswordConverter
    </converter-class>
  </converter>

  <application>
    <resource-bundle>
      <base-name>org.soulwing.credo.resource.messages</base-name>
      <var>messages</var>
    </resource-bundle>
  </application>

</faces-config>
