<arquillian xmlns="http://jboss.org/schema/arquillian"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://jboss.org/schema/arquillian
    http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
  <container qualifier="wildfly-managed" default="true">
    <configuration>
      <property name="jbossHome">target/wildfly-8.0.0.Final</property>
      <property name="javaVmArguments">-XX:MaxPermSize=128m -Djboss.socket.binding.port-offset=50000</property>
      <property name="managementPort">59990</property>
    </configuration>
  </container>
</arquillian>
